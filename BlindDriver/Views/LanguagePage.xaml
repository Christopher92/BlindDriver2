<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlindDriver.Views.LanguagePage"
            Title="Language">
    <ContentPage.Content>
        <Grid RowSpacing="1" ColumnSpacing="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Text="Polski"
                x:Name="PolishButton"
                Clicked="PolishButtonClicked"
                Grid.Row="0"
                Grid.Column="0" />
            <Button Text="English"
                x:Name="EnglishButton"
                Clicked="EnglishButtonClicked"
                Grid.Row="0"
                Grid.Column="1" />
        </Grid>
    </ContentPage.Content>
</ContentPage>

